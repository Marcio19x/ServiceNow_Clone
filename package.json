{
  "name": "servicenow-clone",
  "version": "1.0.0",
  "description": "A ServiceNow clone for ticket management",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "build": "concurrently \"cd frontend && npm run build\" \"cd backend && npm run build\""
  },
  "keywords": [
    "servicenow",
    "ticket-management",
    "react",
    "express",
    "typescript",
    "supabase"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}